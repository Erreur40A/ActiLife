<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="@drawable/background_pop_up"
    android:padding="16dp">


    <!-- Contenu principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <!-- Champ : Nom du mÃ©dicament -->
        <EditText
            android:id="@+id/nomActivite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/border_edittext"
            android:hint="@string/nom_activite"
            android:autofillHints="name"
            android:inputType="text"
            android:padding="16dp"
            android:textSize="23sp"
            android:textStyle="normal" />


        <!-- Champ : Heure (choix via TimePicker) -->
        <EditText
            android:id="@+id/heureDebutActivite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/border_edittext"
            android:hint="@string/heure_debut_activite"
            android:focusable="false"
            android:clickable="true"
            android:padding="16dp"
            android:textSize="23sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/heureFinActivite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/border_edittext"
            android:hint="@string/heure_fin_activite"
            android:focusable="false"
            android:clickable="true"
            android:padding="16dp"
            android:textSize="23sp"
            android:textStyle="normal" />



        <!-- Bouton Ajouter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:weightSum="2">

            <!-- Bouton Annuler -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRetour2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_button"
                android:text="@string/annuler_activite"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Bouton Ajouter -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAjouterAcivite2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_button"
                android:text="@string/ajouter_activite"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
