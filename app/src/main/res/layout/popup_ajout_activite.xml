<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_border"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bloc : Nom de l’activité -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrez le nom de la nouvelle activité :"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/nomActivite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="écrire ici..."
                android:inputType="text"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:paddingTop="8dp"/>
        </LinearLayout>

        <!-- Ligne blanche -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />

        <!-- Bloc : Heure de début -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrez l’heure de début de l’activité :"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/heureDebutActivite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="écrire ici..."
                android:focusable="false"
                android:clickable="true"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:paddingTop="8dp"/>
        </LinearLayout>

        <!-- Ligne blanche -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />

        <!-- Bloc : Heure de fin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrez l’heure de fin de l’activité :"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/heureFinActivite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="écrire ici..."
                android:focusable="false"
                android:clickable="true"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:paddingTop="8dp"/>
        </LinearLayout>

        <!-- Ligne blanche -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />

        <!-- Bloc : Jour -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrez un jour pour l'activité"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/jourActivite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="écrire ici..."
                android:focusable="false"
                android:clickable="true"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:paddingTop="8dp"/>

            <GridLayout
                android:id="@+id/layoutJoursAjoutees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Ligne blanche -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white" />

        <!-- Boutons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:paddingTop="15dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRetour2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_button"
                android:text="@string/annuler_activite"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAjouterAcivite2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_button"
                android:text="@string/ajouter_activite"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
