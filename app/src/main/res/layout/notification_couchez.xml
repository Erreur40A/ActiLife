<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_notif_reveil"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/bleu_nuit">


    <ImageView
        android:id="@+id/image_lune1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/moon"

        android:contentDescription="@string/desc_img_lune"
        android:layout_marginEnd="5dp"
        android:scaleX="-1"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/text_notification"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_notification"
        android:contentDescription="@string/desc_img_lune"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:scaleX="-1"
        />

    <TextView
        android:id="@+id/text_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="@string/text_notif_reveil"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_lune1"
        app:layout_constraintRight_toLeftOf="@id/image_lune2"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        />
    <ImageView
        android:id="@+id/image_lune2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/moon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/text_notification"
        android:contentDescription="@string/desc_img_lune"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
