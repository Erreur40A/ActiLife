<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/layout_notif_reveil"
    android:background="@color/bleu_nuit"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/image_lune1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/moon"
        android:contentDescription="@string/desc_img_lune"
        android:layout_marginEnd="5dp"
        android:scaleX="-1"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/text_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="@string/text_notif_reveil"
        android:textAlignment="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp" />

    <ImageView
        android:id="@+id/image_lune2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/moon"
        android:contentDescription="@string/desc_img_lune"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:scaleType="centerInside" />

</LinearLayout>