<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/layout_notif_hydratation"
    android:background="@color/black"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/image_bottle1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerInside"
        android:layout_marginEnd="5dp"
        android:src="@drawable/bottle_water_solid"
        android:contentDescription="@string/dsec_img_bouteille_d_eau"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="@string/text_notif_hydratation"
        android:textAlignment="center"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>

        <ImageView
        android:id="@+id/image_bottle2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerInside"
        android:layout_marginEnd="5dp"
        android:src="@drawable/bottle_water_solid"
        android:contentDescription="@string/dsec_img_bouteille_d_eau"/>

</LinearLayout>