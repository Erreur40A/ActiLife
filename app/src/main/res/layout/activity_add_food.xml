<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CaloriesActivity">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/arrow"
            android:contentDescription="Retour"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/HeadImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logoactilife"
            android:contentDescription="Logo ActiLife"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/HeadTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ActiLife"
            android:textColor="@color/bleu"
            android:textSize="50sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Titre "Ajouter un plat" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter un plat"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#003366"
            android:layout_marginBottom="24dp"/>

        <!-- Champ "Nom du plat" -->

        <EditText
            android:id="@+id/NomPlat"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:hint="Nom du plat"
            android:textColorHint="@color/black"
            android:paddingStart="16dp"
            android:background="@drawable/rounded_edittext" />

        <!-- Champ "Nombre de kcal" -->

        <EditText
            android:id="@+id/nbcal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:hint="Nb de kcal"
            android:inputType="number"
            android:digits="0123456789"
            android:textColorHint="@color/black"
            android:paddingStart="16dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="16dp" />

        <!-- Bouton "Ajouter" -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAjouter"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Ajouter"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bouton"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
