<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/layout_notif_reveil"
    android:background="@color/bleu_clair"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/image_medoc1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/medicament"
        android:contentDescription="@string/desc_img_medicament"
        android:layout_marginEnd="5dp"
        android:scaleType="centerInside" />

    <LinearLayout
        android:id="@+id/text_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/text_static"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="@string/text_notif_mÃ©dicament"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAlignment="center" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_medoc2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/medicament"
        android:contentDescription="@string/desc_img_medicament"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:scaleType="centerInside"
        android:scaleX="-1" />

</LinearLayout>
