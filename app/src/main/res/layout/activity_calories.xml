<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaloriesActivity">

    <!-- En-tête avec logo et titre -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/arrow"
            android:contentDescription="Retour"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"/>

        <ImageView
            android:id="@+id/HeadImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logoactilife"
            android:contentDescription="Logo ActiLife"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/HeadTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actilife"
            android:textColor="@color/bleu"
            android:textSize="50sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Contenu principal -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAjouterPlat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/ajouter_un_plat"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bouton" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_box">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_defil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qu’avez-vous mangé ?"
                    android:textSize="20dp"
                    android:textColor="#003366"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <ImageView
                    android:id="@+id/img_defil"
                    android:layout_width="24dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@id/text_defil"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/chevron_down_solid"
                    android:contentDescription="Clipboard" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <EditText
                    android:id="@+id/inputQuantite"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/iconClipboard"
                    android:textColor="@color/black"
                    android:hint="quantité (g)"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:textColorHint="@color/black"
                    android:paddingStart="16dp"
                    android:background="@drawable/rounded_edittext" />

                <ImageView
                    android:id="@+id/iconClipboard"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/inputQuantite"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/pen_to_square_regular"
                    android:contentDescription="Clipboard" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnValider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valider"
                android:backgroundTint="#003366"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_box">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="calories ingérés aujourd’hui"
                android:textStyle="bold"
                android:textColor="#003366"
                android:textSize="20dp"/>

            <ProgressBar
                android:id="@+id/progressCalories"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:progress="26"
                android:max="100"
                android:progressDrawable="@drawable/custom_bar"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26%"
                android:textColor="@color/bleu"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:background="@drawable/rounded_box">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="besoin calorifique (en kcal)"
                android:textColor="#003366"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>